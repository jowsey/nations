{
	"name": "nations",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "docker compose up -d && concurrently --prefix ' {name} ' --names 'core,vite' --prefix-colors 'bgBlue,bgGreen' 'bun run src/lib/server/core' 'bun -b run vite dev'",
		"build": "bun -b run vite build",
		"preview": "bun -b run vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"db:start": "docker compose up",
		"db:push": "bun -b run drizzle-kit push",
		"db:generate": "bun -b run drizzle-kit generate",
		"db:migrate": "bun -b run drizzle-kit migrate",
		"db:studio": "bun -b run drizzle-kit studio",
		"better-auth:generate": "bunx -b @better-auth/cli generate --output=src/lib/server/db/schema/better-auth.ts"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.36.0",
		"@sveltejs/adapter-auto": "^6.1.0",
		"@sveltejs/kit": "^2.43.5",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.13",
		"@types/bun": "^1.2.23",
		"@types/node": "^24.6.0",
		"@types/three": "^0.180.0",
		"drizzle-kit": "^0.31.5",
		"eslint": "^9.36.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.4",
		"globals": "^16.4.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"svelte": "^5.39.6",
		"svelte-check": "^4.3.2",
		"tailwindcss": "^4.1.13",
		"three": "^0.180.0",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.45.0",
		"vite": "^7.1.7",
		"vite-plugin-devtools-json": "^1.0.0"
	},
	"dependencies": {
		"alea": "^1.0.1",
		"better-auth": "^1.3.23",
		"concurrently": "^9.2.1",
		"drizzle-orm": "^0.44.5",
		"postgres": "^3.4.7",
		"simplex-noise": "^4.0.3"
	}
}
