{
  "name": "server",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "format": "bun -b run prettier --write .",
    "lint": "bun -b run eslint .",
    "lint:fix": "bun -b run eslint . --fix",
    "dev": "docker compose up -d && bun run src/index.ts",
    "db:push": "docker compose up -d && bun -b run drizzle-kit push",
    "better-auth:generate": "bunx -b @better-auth/cli generate --output=./src/db/schema/better-auth.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/bun": "latest",
    "drizzle-kit": "^1.0.0-beta.1-fd8bfcc",
    "eslint": "^9.37.0",
    "postgres": "^3.4.7",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.46.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "alea": "^1.0.1",
    "drizzle-orm": "^1.0.0-beta.1-fd8bfcc",
    "nanoid": "^5.1.6",
    "simplex-noise": "^4.0.3"
  }
}
